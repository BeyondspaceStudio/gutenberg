{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"incremental": false,
		"composite": false,
		"module": "CommonJS",
		/* Ensure dynamic imports are left untouched */
		"moduleResolution": "node16",
		/* Ignore error flagged in node_modules/lighthouse/core/index.d.cts */
		"skipLibCheck": true,
		"types": [ "node" ],
		"rootDir": "src",
		"noEmit": false,
		"outDir": "build",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "build-types",
		"emitDeclarationOnly": false,
		"allowJs": true,
		"checkJs": false
	},
	"references": [
		{ "path": "../api-fetch" },
		{ "path": "../keycodes" },
		{ "path": "../url" }
	],
	"include": [ "src/**/*" ]
}
